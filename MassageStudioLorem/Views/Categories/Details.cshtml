@model MassageListingViewModel

@{
    ViewData["Title"] = "Details";
}

<div id="main-content" class="blog-page">
    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-8 col-md-12 left-box">
                <div class="card single_post">
                    <div class="body">
                        <div class="img-post">
                            <img class="d-block img-fluid" src="@Model.ImageUrl" alt="@Model.Name picture">
                        </div>
                        <h3 class="text-center" style="padding: 10px">
                            @Model.Name
                        </h3>
                        <h5 style=" text-align: center">@Model.LongDescription</h5>
                        <h5 class="text-left" style="margin-top: 50px">Price: @Model.Price.ToString("F2")</h5>
                    </div>
                    <div class="footer text-center">
                        <div class="actions">
                            <a href="javascript:void(0);" class="btn btn-outline-primary">Book</a>
                        </div>
                    @*</div>
                    <div class="footer">
                        <h5 class="text-left">Price: @Model.Price.ToString("F2")</h5>
                    </div>*@
                </div>
                </div>
            </div>
        </div>
    </div>
</div>