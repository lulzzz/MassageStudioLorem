@model AvailableMasseurDetailsServiceModel

@{ ViewBag.Title = "Masseur Details"; }

<div asp-validation-summary="All" class="text-danger"></div>

@if (Model != null)
{
    <div id="main-content" class="blog-page">
        <div class="container">
            <div class="row clearfix">
                <div class="col-lg-8 col-md-12 offset-md-2">
                    <div class="card single_post">
                        <div class="body">
                            <div class="img-post">
                                <img class="d-block img-fluid mx-auto" src="@Model.ProfileImageUrl" alt="@Model.FullName's profile picture">
                            </div>
                            <h3 class="text-center" style="padding: 10px">
                                @Model.FullName
                            </h3>
                            <h5 style="text-align: center">@Model.Description</h5>
                        </div>
                        <h6 class="text-center">
                            <span class="fas fa-phone fa-lg text-dark"></span> @Model.PhoneNumber
                        </h6>
                        <div class="footer text-center">
                            <div class="actions">
                                @if (Model.MassageId == null)
                                {
                                    <a asp-controller="Massages"
                                       asp-action="AvailableMassages"
                                       asp-route-categoryId="@Model.CategoryId"
                                       asp-route-masseurId="@Model.Id"
                                       class="btn btn-outline-primary">
                                        Book
                                    </a>
                                    <a asp-controller="Reviews"
                                       asp-action="MasseurReviews"
                                       asp-route-categoryId="@Model.CategoryId"
                                       asp-route-masseurId="@Model.Id"
                                       class="btn btn-outline-primary">
                                        See reviews
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Appointments"
                                       asp-action="Book"
                                       asp-route-massageId="@Model.MassageId"
                                       asp-route-masseurId="@Model.Id"
                                       class="btn btn-outline-primary">
                                        Book
                                    </a>
                                    <a asp-controller="Reviews"
                                       asp-action="MasseurReviews"
                                       asp-route-massageId="@Model.MassageId"
                                       asp-route-masseurId="@Model.Id"
                                       class="btn btn-outline-primary">
                                        See reviews
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}