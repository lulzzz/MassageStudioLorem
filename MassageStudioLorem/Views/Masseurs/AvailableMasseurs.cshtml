@model AvailableMasseursQueryServiceModel


@{ ViewBag.Title = "Available Masseurs"; }

<div class="row">
    <div class="col-lg-8 mx-auto text-center">
        <div class="mb-4">
            <h6 class="text-uppercase">@ViewBag.Title</h6>
            <hr class="solid">
        </div>
    </div>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

@if (Model?.Masseurs != null && Model != null)
{
    <div class="card-deck">
        @foreach (var masseur in Model.Masseurs)
        {
            <div class="row">
                <div class="col-md-4 offset-md-5">
                    <div class="card mb-3" style="width: 16rem">
                        <img class="card-img-top" src="@masseur.ProfileImageUrl" alt="@masseur.FullName's profile photo'">
                        <div class="card-body text-center">
                            <h5 class="card-title text-center">@masseur.FullName</h5>
                            <div>
                                <span class="star-rating">
                                    @{
                                        var rated = Math.Ceiling(masseur.Rating);
                                        var leftEmpty = 5 - rated;
                                    }
                                    @for (var i = 1; i <= rated; i++)
                                    {
                                        <span class="fas fa-star"></span>
                                    }
                                    @for (var i = leftEmpty; i >= 0; i--)
                                    {
                                        <span class="far fa-star"></span>
                                    }
                                    <input type="hidden" name="" class="rating-value" value="@masseur.Rating">
                                </span>
                                <span>@masseur.Rating.ToString("F") / 5.00 ) from @masseur.RatersCount votes</span>
                            </div>
                            <a asp-controller="Masseurs" asp-action="Details" asp-route-categoryId="@Model.CategoryId" asp-route-massageId="@Model.MassageId" asp-route-masseurId="@masseur.Id" class="btn btn-outline-primary">View More</a>
                            <a asp-controller="Appointments" asp-action="Book" asp-route-massageId="@Model.MassageId" asp-route-masseurId="@masseur.Id" class="btn btn-outline-primary">Book</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    if (Model.CurrentPage - 1 < 1)
    {
        Model.CurrentPage = 1;
    }

    <div class="row mb-5">
        <div class="col-md-6">
            <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
               asp-controller="Masseurs"
               asp-action="AvailableMasseurs"
               asp-route-currentPage="@(Model.CurrentPage - 1)"
               asp-route-categoryId="@Model.CategoryId"
               asp-route-massageId="@Model.MassageId">
                Previous
            </a>
        </div>

        @{
            var shouldButtonBeDisabled = Model.CurrentPage == Model.MaxPage ||
                                         Model == null;
        }

        <div class="col-md-6">
            <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
               asp-controller="Masseurs"
               asp-action="AvailableMasseurs"
               asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-route-categoryId="@Model.CategoryId"
               asp-route-massageId="@Model.MassageId">
                Next
            </a>
        </div>
    </div>
}